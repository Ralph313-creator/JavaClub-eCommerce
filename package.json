{
  "name": "javaclub-ecommerce",
  "version": "1.0.0",
  "description": "JavaClub ecommerce for Coffee & Pastries ",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend-javaclub/server.js",
    "server": "nodemon backend-javaclub/server.js",
    "client": "npm start --prefix frontend-javaclub",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend-javaclub/seeder",
    "data:destroy": "node backend-javaclub/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ralph313-creator/javaClub-eCommerce.git"
  },
  "author": "Ralph Ocba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ralph313-creator/javaClub-eCommerce/issues"
  },
  "homepage": "https://github.com/Ralph313-creator/javaClub-eCommerce#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^6.8.4"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  }
}
